<?xml version="1.0" encoding="iso-8859-1"?>

<root>
	<windowclass name="subwindow_eb_filter">
		<script>
			function getStringValue()
				return effect_filter.getStringValue();
			end
		</script>
        <margins control="0,0,5,2" />
        <sheetdata>
            <leftanchor_eb />

            <combobox_eb name="effect_filter">
				<script>
					local fOptionClicked;
					function onInit()
						super.onInit()
						fOptionClicked = super.optionClicked;
						super.optionClicked = optionClicked;

						add("")
					end
					function optionClicked(wNewSelection)
						fOptionClicked(wNewSelection);
						
						if getStringValue() == "" then
							window.windowlist.removeEntry(window);
						else
							window.windowlist.update();
						end
					end
				</script>
				<empty textres="filter"/>
			</combobox_eb>
        </sheetdata>
    </windowclass>

    <template name="subwindow_eb_number_value">
        <subwindow_eb_valueholder name="number_value">
            <class>subwindow_eb_number_value</class>
        </subwindow_eb_valueholder>
    </template>
    <windowclass name="subwindow_eb_number_value">
        <script file="common/scripts/subwindow_eb_dice_value.lua" />
